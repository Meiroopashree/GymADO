@model GymMembership

<h2>Add New GymMembership</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
    @Html.LabelFor(model => model.JoiningDate)
    @Html.EditorFor(model => model.JoiningDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
</div>
    <div class="form-group">
        @Html.LabelFor(model => model.MembershipType)
        @Html.DropDownListFor(model => model.MembershipType, new SelectList(new[]
        {
            new SelectListItem { Text = "Gold", Value = "Gold" },
            new SelectListItem { Text = "Silver", Value = "Silver" },
            new SelectListItem { Text = "Platinum", Value = "Platinum" }
        }, "Value", "Text"), "Select Membership Type", new { @class = "form-control" })
    </div>

    <div class="form-group">
    @Html.LabelFor(model => model.ExpiryDate)
    @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
</div>

    <br />
    <input type="submit" value="Create" class="btn btn-primary" />
}
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
